<UserControl x:Class="EngineWPFCoreUI.MyBezierSegment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EngineWPFCoreUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <Path x:Name="_Path" Stroke="DarkGray">
            <Path.Data>
                <PathGeometry>
                    <PathFigure x:FieldModifier="protected" x:Name="Start" StartPoint="60,10">
                        <BezierSegment x:FieldModifier="protected" x:Name="End" Point1="180,30" Point2="100,140" Point3="210,150"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Canvas>
    
</UserControl>
